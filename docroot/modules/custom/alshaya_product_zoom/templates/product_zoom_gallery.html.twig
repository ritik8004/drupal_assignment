<div id="product-image-gallery-container" class="imagegallery" style="display: none;">
  <div class="imagegallery__wrapper">
    <ul id="product-image-gallery" class="imagegallery__thumbnails">
      {% for thumbs in thumbnails %}
        {% if thumbs.type == 'youtube' %}
          <li data-iframe="{{ thumbs.url }}" class="imagegallery__thumbnails__video youtube">
            <img width='{{ thumbs.width }}' height='{{ thumbs.height }}' src="{{ thumbs.thumburl }}"/>
          </li>
        {% elseif thumbs.type == 'vimeo' %}
          <li data-iframe="{{ thumbs.url }}" class="imagegallery__thumbnails__video vimeo">
            <img width='{{ thumbs.width }}' height='{{ thumbs.height }}' src=""/>
          </li>
        {% else %}
          <li>
            <a href="{{ thumbs.fullurl }}" class="imagegallery__thumbnails__image a-gallery">
              <img src="{{ thumbs.thumburl }}"/>
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
    {% set firstItem =  thumbnails | first %}
    <div id="full-image-wrapper" class="imagegallery__full" style="width: 600px; height: 600px; overflow: hidden;">
      {% if firstItem.type == 'youtube' %}
          <img class="imagegallery__full__video" width='{{ firstItem.width }}' height='{{ firstItem.height }}' src="{{ firstItem.thumburl }}"/>
      {% elseif firstItem.type == 'vimeo' %}
          <img class="imagegallery__full__video" width='{{ firstItem.width }}' height='{{ firstItem.height }}' src=""/>
      {% else %}
          <img class="imagegallery__full__image" style="max-width: none;" id="full-image" src="{{ firstItem.fullurl }}"/>
      {% endif %}
    </div>

    <button class="zoomout">{{ 'Zoom Out'|t }}</button ><button class="zoomin">{{ 'Zoom In'|t }}</button >
  </div>
</div>
