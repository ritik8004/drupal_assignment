{{ attach_library('alshaya_search_api/facets_all_slider') }}

{% if facet_blocks %}
{% if show_all %}
  <div class="show-all-filters">{{ 'All Filters'|t }}</div>
{% endif %}
<div class='all-filters' style='display: none;'>
  <div class='facet-all-back' style='display: none;'>back button</div>
  <div class='filter-sort-title'>{{ 'Filter & Sort'|t }}</div>
  <div class='facet-all-apply'>Close button</div>
    {% for facet_block in facet_blocks %}
      {{ facet_block }}
    {% endfor %}
  <div class='facet-all-count'></div>
  <div class='facet-all-clear'></div>
  <div class='facet-all-apply'>{{ 'Apply Filter'|t }}</div>
</div>
{% endif %}

{#Adding search result count#}
<div class='total-result-count'></div>
<div class="large-col-grid">
  <svg class="g2" xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15">
      <g class="grid" fill="#DADADA" fill-rule="nonzero">
          <path d="M0 0h7v15H0zM8 0h7v15H8z"/>
      </g>
  </svg>
  <svg class="g1" xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15">
      <path class="grid" fill="#DADADA" fill-rule="nonzero" d="M0 0h15v15H0z"/>
  </svg>
</div>
<div class="small-col-grid active">
  <svg class="g3" xmlns="http://www.w3.org/2000/svg" width="14" height="15" viewBox="0 0 14 15">
      <g class="grid" fill="#DADADA" fill-rule="nonzero">
          <path d="M0 0h4v7H0zM5 0h4v7H5zM10 0h4v7h-4zM10 8h4v7h-4zM5 8h4v7H5zM0 8h4v7H0z"/>
      </g>
  </svg>
  <svg class="g2" xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15">
      <g class="grid" fill="#DADADA" fill-rule="nonzero">
          <path d="M0 0h7v15H0zM8 0h7v15H8z"/>
      </g>
  </svg>
</div>
