/**
 * Implements hook_ENTITY_TYPE_presave().
 */
function alshaya_main_menu_taxonomy_term_presave(EntityInterface $entity) {
  // For categories, populate include in menu field with TRUE by default.
  if ($entity->bundle() == 'acq_product_category' && $entity->isNew()) {
    $entity->get('field_category_include_menu')->setValue(TRUE);
  }
}
