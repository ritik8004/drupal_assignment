<div class="main--menu">
  <ul>
    {% for key1, level1 in term_tree %}
      <li class="parent--level">
        <a class="level--one" href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': level1.id}) }}">{{ level1.label }}</a>

        {% if level1.child is not empty %}
          {{ alshaya_main_menu('alshaya_main_menu_level2', level1) }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>
