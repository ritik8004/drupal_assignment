{#
/**
 * @file
 * Template file to be used for showing address info in the same way as address book.
 *
 * This is used specifically for showing address for guest users.
 * Copied from template of profile__address_book.
 * This template must be updated with every update in source file.
 */
#}

<div class="address">
  <div class="address--data">
    <div class="address--userinfo">
      {% if delivery_to is not empty %}
        <div>
          <div class="address--label">{{ 'Delivery to' | t }}</div>
          <div class="address--content">{{ delivery_to }}</div>
        </div>
      {% endif %}
      {% if delivery_address.organization is not empty %}
        <div class="address--contact">
          <div class="address--label">{{ 'Email' | t }}</div>
          <div class="address--content">{{ delivery_address.organization }}</div>
        </div>
      {% endif %}
      {% if contact_no is not empty %}
        <div class="address--contact">
          <div class="address--label">{{ 'Contact number' | t }}</div>
          <div class="address--content">{{ contact_no }}</div>
        </div>
      {% endif %}
    </div>
    {% if delivery_address is not empty %}
      <div class="address--delivery">
        <div class="address--label">{{ 'Delivery address' | t }}</div>
        {% if delivery_address.address_line2 is not empty %}
          <div class="address--content">{{ delivery_address.address_line2 }}</div>
        {% endif %}
        {% if delivery_address.dependent_locality is not empty %}
          <div class="address--content">{{ delivery_address.dependent_locality }}</div>
        {% endif %}
        {% if delivery_address.address_line1 is not empty %}
          <div class="address--content">{{ delivery_address.address_line1 }}</div>
        {% endif %}
        {% if delivery_address.administrative_area is not empty %}
          {% if delivery_address.administrative_area_display is not empty %}
            <div class="address--content">{{ delivery_address.administrative_area_display }}</div>
          {% else %}
            <div class="address--content">{{ delivery_address.administrative_area }}</div>
          {% endif %}
        {% endif %}
        {% if delivery_address.area_parent is not empty %}
          {% if delivery_address.area_parent_display is not empty %}
            <div class="address--content">{{ delivery_address.area_parent_display }}</div>
          {% else %}
            <div class="address--content">{{ delivery_address.area_parent }}</div>
          {% endif %}
        {% endif %}
        {% if delivery_address.locality is not empty %}
          {% if delivery_address.locality_display is not empty %}
            <div class="address--content">{{ delivery_address.locality_display }}</div>
          {% else %}
            <div class="address--content">{{ delivery_address.locality }}</div>
          {% endif %}
        {% endif %}
        {% if delivery_address.sorting_code is not empty %}
          <div class="address--content">{{ delivery_address.sorting_code }}</div>
        {% endif %}
        {% if delivery_address.country is not empty %}
          <div class="address--content">{{ delivery_address.country }}</div>
        {% endif %}
        {% if delivery_address.postal_code is not empty %}
          <div class="address--content">{{ delivery_address.postal_code }}</div>
        {% endif %}
      </div>
    {% endif %}
  </div>

  <div class="address--options">
    {% if change_address is not empty %}
      <div class="address--change-address address--controls">
        {{ change_address }}
      </div>
    {% endif %}
  </div>
</div>
