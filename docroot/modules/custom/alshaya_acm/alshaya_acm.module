/**
 * Wrapper function to check current stock mode.
 *
 * @return bool
 *   TRUE if stock mode is push.
 */
function alshaya_acm_is_stock_push_enabled() {
  static $status;

  if (!isset($status)) {
    $stock_mode = \Drupal::config('acq_sku.settings')->get('stock_mode');
    $status = $stock_mode === 'push';
  }

  return $status;
}
