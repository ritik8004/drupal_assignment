{% if free_shipping %}
  <div class="free-shipping-message-wrapper messages messages--status">
    {{ free_shipping }}
  </div>
{% endif %}

{% if promotions is not empty %}
  <div class="cart-promotions-wrapper" id="block-basketpromotionmessage">
    {% for id, promotion in promotions %}
      <div class="promotion">{{ promotion }}</div>
    {% endfor %}
  </div>
{% endif %}

{% if inactive_promotions is not empty %}
  <div class="cart-promotions-wrapper inactive-promotions" id="block-basketinactivepromotionmessage">
    {% for id, promotion in inactive_promotions %}
      <div class="promotion {{ promotion.type }} {{ promotion.extra_classes }}">
        {% if promotion.type == 'fixed_percentage_discount_order' %}
          {% include '@alshaya_acm_promotion/price-tag-svg-partial.html.twig' %}
        {% endif %}
        <span class="promotion-label">{{ promotion.label }}</span>
      </div>
    {% endfor %}
  </div>
{% endif %}

{% if active_promotions is not empty %}
  <div class="cart-promotions-wrapper active-promotions" id="block-basketactivepromotionmessage">
    {% for id, promotion in active_promotions %}
      <div class="promotion {{ promotion.type }}">
        {% if promotion.type == 'fixed_percentage_discount_order' %}
          {% include '@alshaya_acm_promotion/price-tag-svg-partial.html.twig' %}
        {% endif %}
        <span class="promotion-label">{{ promotion.label }}</span>
      </div>
    {% endfor %}
  </div>
{% endif %}
