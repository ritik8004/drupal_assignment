/**
 * Implements hook_facets_query_string_alter().
 */
function alshaya_search_facets_query_string_alter(ParameterBag $result_get_params, array &$filter_params, array &$context) {
  $facet = $context['facet'];

  // If we processing the URL for an L1 item, remove all category
  // filters. Clicking on an L1 item when the active filter is something
  // else, should return back to default state.
  $facet_source_id = $facet->getFacetSourceId();

  // Filter alias.
  $url_alias = $facet->getUrlAlias();

  // Get parents of result.
  $parent_ids = $facet->getHierarchyInstance()->getParentIds($context['result']->getRawValue());

  // Only for the category facet.
  if ($facet->getHierarchy() && !$context['result']->isActive()) {
    // We doing this as for the PLP page, we not show the L1
    // (current active) item.
    $facet_count = $facet_source_id == 'search_api:views_block__alshaya_product_list__block_1' ? 1 : 0;
    $facet_count += isset($context['facet_count']) ? $context['facet_count'] : 0;

    if ((count($parent_ids) === $facet_count) &&
      (isset($context['active_filters'][$url_alias])) &&
      (count($context['active_filters'][$url_alias]) > 0)) {
      // Get child ids of result.
      $child_ids = $facet->getHierarchyInstance()->getNestedChildIds($context['result']->getRawValue());
      foreach ($filter_params as $key => $param) {
        if (strpos($param, $url_alias) === 0) {
          foreach ($child_ids as $child) {
            // If root term has any child active, then unset it.
            if (in_array($child, $context['active_filters'][$url_alias])) {
              unset($filter_params[$key]);
              break;
            }
          }
        }
      }
    }
  }

  // Add accordion effect to selected L2 items.
  if ($facet->getUseHierarchy()) {
    // Variable to hold the parent id selected.
    static $root_parent_id = '';
    $result = $context['result'];

    // Static variable to hold the depth of parent id to be removed from facet
    // urls.
    static $facet_parent_term_hide_depth = 0;

    // Flag to check if the current term has been processed.
    static $facet_parent_term_depth_processed = FALSE;

    // In case of PLP, hide L1 from url when on L2 & L2 parent from url when on
    // L3. Process this only once. Fetch term object from current request & set
    // depth for the item to be hidden from url based on its depth.
    if (!($facet_parent_term_depth_processed) &&
      ($facet_source_id == 'search_api:views_block__alshaya_product_list__block_1') &&
      (($term = \Drupal::request()->attributes->get('taxonomy_term')) instanceof TermInterface)) {
      $facet_parent_term_hide_depth = $term->get('depth_level')->getString() - 1;
      $facet_parent_term_depth_processed = TRUE;
    }

    // Hide root parent id post selection from all the facet items. We don't
    // want the user to land onto L1 expanded state via any interaction post 1st
    // expansion.
    // Find the root parent id which has been selected from FE.
    if ((count($parent_ids) === $facet_parent_term_hide_depth) &&
      (!empty($context['active_filters'][$url_alias])) &&
      (empty($root_parent_id))) {
      $root_parent_id = $result->getRawValue();
    }

    // Remove root parent id from list of filter params.
    if (!empty($root_parent_id)) {
      foreach ($filter_params as $key => $param) {
        if ((strpos($param, $url_alias) === 0) &&
          ($param == $url_alias . ':' . $root_parent_id)) {
          unset($filter_params[$key]);
        }
      }
    }

    // Get list of child ids for the current result item.
    $child_ids = $facet->getHierarchyInstance()->getNestedChildIds($result->getRawValue());

    // Handling with an L2 whose children are active. 1 parent means the
    // item is L2 & check if one of its children is selected.
    $parent_id_count = 1;
    $parent_id_count += isset($context['parent_id_count']) ? $context['parent_id_count'] : 0;

    if ((count($parent_ids) == $parent_id_count) &&
      (!empty($context['active_filters'][$url_alias])) &&
      ((count(array_diff($child_ids, $context['active_filters'][$url_alias])) < count($child_ids)) ||
        (in_array($result->getRawValue(), $context['active_filters'][$url_alias])))) {
      $result_get_params->set('no_url_l2', TRUE);

      // Get the last selected item from the list of active filters.
      $current_filter_category = end($context['active_filters'][$url_alias]);

      // Add another query parameter to L2 in case on of its children is
      // selected.
      if (in_array($current_filter_category, $child_ids) ||
        ($result->getRawValue() == $current_filter_category)) {
        $result_get_params->set('current_facet', TRUE);
      }
    }

    // If L3 active item for 'search' page.
    if (count($parent_ids) == 2
      && $context['result']->isActive()
      && $facet_source_id == 'search_api:views_page__search__page') {
      // Index 0 will always be the L2 parent.
      $parent_id = $parent_ids[0];
      // Get all children of L2 parent.
      $parent_child_ids = $facet->getHierarchyInstance()->getNestedChildIds($parent_id);
      // If there are more than 1 active children of a L2.
      if (count(array_intersect($parent_child_ids, $context['active_filters'][$url_alias])) == 1) {
        // Just select L2 parent if there is only 1 L3 active item.
        $filter_params[] = $url_alias . ':' . $parent_id;
      }
    }
  }
}

/**
 * Helper function to clear all indexed items resave indexes.
 *
 * Since we will add/update lot of attributes, best to re-use the code.
 */
function _alshaya_search_resave_indexes() {
  $indexes = ['product', 'acquia_search_index'];

  foreach ($indexes as $index_name) {
    // Queue items for re-indexing. Required specifically for search_api_db to
    // avoid creating tables with numeric prefixes when indexing content.
    $index = Index::load($index_name);

    // Re-index all items.
    $index->reindex();

    // Save index to reflect new category field.
    $index->save();
  }
}

/**
 * Implements hook_acq_sku_base_fields_updated().
 */
function alshaya_search_acq_sku_base_fields_updated(array $fields, $op = 'add') {
  /** @var \Drupal\alshaya_search_api\AlshayaSearchApiFacetsManager $facet_manager */
  $facet_manager = \Drupal::service('alshaya_search_api.facets_manager');

  $facet_source_id = 'search_api:views_page__search__page';
  $filter_bar_id = 'facets_summary.facets_summary.filter_bar';
  $prefix = '';

  switch ($op) {
    case 'add':
      alshaya_config_install_configs(['search_api.index.acquia_search_index'], 'alshaya_search');

      foreach ($fields as $field_code => $field) {
        if (empty($field['facet'])) {
          continue;
        }

        $facet_manager->createFacet($field_code, $facet_source_id, $filter_bar_id, $prefix);
      }
      break;

    case 'remove':
      foreach ($fields as $field_code => $field) {
        $index_field_code = 'attr_' . $field_code;
        _alshaya_search_api_remove_field_from_indexes($index_field_code, 'acquia_search_index');

        // Remove from facets if facet is 1.
        if (!empty($field['facet'])) {
          $facet_manager->removeFacet($field_code, $filter_bar_id, $prefix);
        }
      }
      break;
  }
}

/**
 * Implements hook_acquia_search_get_list_of_possible_cores_alter().
 */
function alshaya_search_acquia_search_get_list_of_possible_cores_alter(&$possible_core_ids, $core_service) {
  $use_brand_specific_core = \Drupal::config('alshaya_search.settings')->get('use_brand_specific_core');

  if (!empty($use_brand_specific_core)) {
    // @codingStandardsIgnoreLine
    global $site_code;

    $ah_env = preg_replace('@[^a-zA-Z0-9]+@', '', $core_service->ah_env);

    array_unshift($possible_core_ids, $core_service->acquia_identifier . '.' . $ah_env . '.' . $site_code);
  }
}
