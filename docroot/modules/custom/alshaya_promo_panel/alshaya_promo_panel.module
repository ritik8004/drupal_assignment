<?php

/**
 * @file
 * Module file for alshaya_promo_panel.
 */

use Drupal\Core\Url;

/**
 * Implements hook_preprocess_block().
 */
function alshaya_promo_panel_preprocess_block(&$variables) {
  switch ($variables['base_plugin_id']) {
    case 'block_content':
      $block_id = $variables['elements']['#id'];
      $promo_panel_blocks = \Drupal::config('alshaya_promo_panel.settings')->get('promo_panel_blocks');
      if (!in_array($block_id, array_keys($promo_panel_blocks))) {
        return;
      }

      $variables['#cache']['contexts'][] = 'url.path';
      // Get current language object.
      $lang = \Drupal::languageManager()->getCurrentLanguage();
      // Get the language code.
      $lang_code = $lang->getId();

      if ($variables['content']) {
        // If the block is placed in "Block Layout".
        if (!empty($variables['elements']['#id'])) {
          // Make label a link to redirect to Promo panel page on mobile.
          $label = $variables['label'];
          $element['label'] = [
            '#type' => 'link',
            '#title' => $label,
            '#url' => Url::fromUri('internal:' . $promo_panel_blocks[$block_id], ['language' => $lang]),
            '#options' => [
              'attributes' => [
                'class' => ['mobile-link'],
              ],
            ],
          ];

          // Change default label with link.
          $variables['label'] = [
            '#markup' => \Drupal::service('renderer')->render($element),
          ];

          $variables['attributes']['class'][] = 'block-promo-panel-wrapper';
          $variables['title_attributes']['class'][] = 'promo-panel-label';
          $variables['content']['#attached']['library'][] = 'alshaya_promo_panel/promo-panel';
        }
        // If the block is added to "block reference" paragraph type.
        else {
          // Get the referer path.
          $referrer_path = parse_url(\Drupal::request()->headers->get('referer'))['path'];
          $referrer_path = preg_replace('/^(\/' . $lang_code . ')(.*)/g', '', $referrer_path);
          $empty = !empty($referrer_path) ? $referrer_path : 'home';

          // Create the back link.
          $element['back'] = [
            '#type' => 'link',
            '#title' => t('Back'),
            '#url' => Url::fromUri('internal:/' . $empty, ['language' => $lang]),
            '#options' => [
              'attributes' => [
                'class' => ['mobile-back-link'],
              ],
            ],
          ];
        }
      }
      break;
  }
}

/**
 * Get the block content machine name from.
 *
 * @param string $block_name
 *   The block machine name.
 *
 * @return null|string
 *   Return string if block found else null.
 */
function alshaya_promo_panel_get_block_content_name($block_name) {
  // Get the block content machine name from the block and set it in config.
  $blocks = \Drupal::entityTypeManager()->getStorage('block')->loadByProperties(['id' => $block_name]);
  $block = reset($blocks);
  if (strpos($block->getPluginId(), 'block_content') !== TRUE) {
    return NULL;
  }

  $uuid = explode(':', $block->getPluginId())[1];
  $block_contents = \Drupal::entityTypeManager()->getStorage('block_content')->loadByProperties(['uuid' => $uuid]);
  if (!count($block_contents)) {
    return NULL;
  }

  $block_content = reset($block_contents);
  return $block_content->get('machine_name')->value;
}
