<div id="pdp-home-delivery" class="delivery-options delivery-options-wrapper">
  <div class="c-accordion-delivery-options">
    <div class="express-delivery-title-wrapper title">
      <h3 class="c-accordion__title express-delivery-title">
      {{#if title }}
        {{ title }}
        <span class="subtitle express-delivery-subtitle">{{ subtitle }}</span>
      {{/if}}
      </h3>
    {{#if (eq type 'express_delivery') }}
      <div class="c-accordion_content">
        <div id="express-delivery-options"></div>
      </div>
    {{else if (eq type 'standard_delivery') }}
      <div class="c-accordion_content">
        <div class="delivery-option-content">
          <div class="delivery-option-title">
            {{#if standard_title }}
              {{ standard_title }}
            {{/if}}
            {{#if standard_subtitle }}
            <span>{{ standard_subtitle }}</span>
            {{/if}}
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</div>
