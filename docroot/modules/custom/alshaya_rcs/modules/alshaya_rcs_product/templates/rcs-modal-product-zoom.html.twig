<div id="product-zoom-container">
  {% block defaultGallery %}
    <div class="cloudzoom thumbnail-count-#rcs.product_modal.self|thumbnail_count#">
    <div class="cloudzoom__herocontainer">
      <div id="cloud-zoom-wrap" class="cloudzoom__image">
        <div class="img-wrap" data-scale="2">
          <img data-zoom-url="#rcs.product_modal._self|image#" class="" data-src="#rcs.product_modal._self|image#" alt="#rcs.product_modal.name#" title="#rcs.product_modal.name#" />
        </div>
      </div>
      <div class="yt-vi-container cloudzoom__video_main"></div>
      {# @todo: Work on product labels. #}
      {%  if labels|length > 0 %}
        <div class="product-labels">
          {{ labels }}
        </div>
      {% endif %}
    </div>
    <div class="cloudzoom__thumbnails">#rcs.product_modal._self|product_thumbnails#</div>
  </div>
  {% endblock %}
  {% block mobileGallery %}
    <div class="mobilegallery">
      <ul id="product-image-gallery-mobile" class="mobilegallery__thumbnails #rcs_product.self|thumbnail_count#">#rcs.product_modal._self|product_mobile_gallery#</ul>
    {%  if labels|length > 0 %}
      {# @Todo: Work on Product lozenges #}
      <div class="product-labels">
        {{ labels }}
      </div>
    {% endif %}
  </div>
  {% endblock %}
  {% block modalGallery %}
    <div id="product-full-screen-gallery-container" style="display: none;">
      <div class="imagegallery__wrapper thumbnail-count-#rcs.product_modal.self|thumbnail_count#">
        <div class="yt-vi-container cloudzoom__video_modal"></div>
        {# As per new desgn we dont show videos in full screen modal galleries. #}
        <ul id="product-full-screen-gallery">#rcs.product_modal._self|product_full_screen_gallery#</ul>
      </div>
    </div>
  {% endblock %}
</div>
