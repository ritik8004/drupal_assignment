<div class="gallery-wrapper">
  <div id="product-zoom-container">
    {% block defaultGallery %}
      <div class="cloudzoom thumbnail-count-#rcs_product.self|thumbnail_count#">
      <div class="cloudzoom__herocontainer">
        <div id="cloud-zoom-wrap" class="cloudzoom__image">
          <div class="img-wrap" data-scale="2"><img data-zoom-url="#rcs.product._self|image#" loading="lazy" src="#rcs.product._self|image#" data-src="#rcs.product._self|image#" alt="{{ mainImage.label }}" title="{{ mainImage.label }}" /></div>
        </div>
        <div class="yt-vi-container cloudzoom__video_main"></div>
      </div>
      <div class="cloudzoom__thumbnails"></div>
    </div>
    {% endblock %}
    {% block mobileGallery %}
      <div class="mobilegallery">
        <ul id="product-image-gallery-mobile" class="mobilegallery__thumbnails #rcs_product.self|thumbnail_count#"></ul>
    </div>
    {% endblock %}
    {% block modalGallery %}
      <div id="product-full-screen-gallery-container" style="display: none;">
        <div class="imagegallery__wrapper thumbnail-count-#rcs_product.self|thumbnail_count#">
          <div class="yt-vi-container cloudzoom__video_modal"></div>
          {# As per new desgn we dont show videos in full screen modal galleries. #}
          <ul id="product-full-screen-gallery"></ul>
        </div>
      </div>
    {% endblock %}
  </div>
</div>
