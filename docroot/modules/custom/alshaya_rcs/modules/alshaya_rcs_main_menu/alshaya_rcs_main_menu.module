/**
 * Implements hook_alshaya_rcs_category_query_fields_alter().
 *
 * Build query fields based on mobile menu layout settings.
 */
function alshaya_rcs_main_menu_alshaya_rcs_category_query_fields_alter(array &$fields, $depth) {
  if (\Drupal::config('alshaya_main_menu.settings')->get('mobile_main_menu_layout') !== AlshayaMainMenuConfigForm::MOBILE_MENU_VISUAL) {
    return;
  }

  $actual_depth = \Drupal::config('alshaya_rcs_main_menu.settings')->get('max_depth_to_load') - $depth;

  switch ($actual_depth) {
    case 0:
      // Add fields for level 1.
      $fields = array_merge($fields, [
        'is_visual_menu_layout',
      ]);
      break;

    case 1:
    case 2:
      // Add fields for level 2.
      $fields = array_merge($fields, [
        'image',
        'is_carousel_slider',
      ]);
      break;

    case 3:
      // Add fields for level 3.
      $fields = array_merge($fields, [
        'image',
        'is_include_in_level2',
      ]);
      break;

    case 4:
    default:
      // Add fields any other depths.
      $fields = array_merge($fields, [
        'image',
        'is_include_in_level2',
      ]);
      break;

  }
}
