{{! @see docroot/modules/custom/alshaya_main_menu/templates/alshaya-main-menu-level3.html.twig }}
<ul class="menu__list menu--three__list">
  <div class="level-three__wrapper">
    <span class="back--link"><span class="menu__back"></span> <span>{{ name }}</span></span>
    {{#each items as |menu_item|}}
      <li class="menu__list-item menu--three__list-item {{ level_class }}">
        <div class="menu__link-wrapper menu-two__link-wrapper">
          <{{@menu_item.tag}} class="menu__link menu--three__link {{ level_class }}" style="{{@root.style}}" title="{{ menu_item.name }}" gtm-menu-title="{{ menu_item.name }}" href="{{ @root.path_prefix }}{{ menu_item.url_path }}">{{ menu_item.name }}</{{@menu_item.tag}}>
        </div>
        {{#if menu_item.children }}
          {{> main_menu_level4_partial name=name items=menu_item.children level_class=level_class }}
        {{/if}}
      </li>
    {{/each}}
  </div>
</ul>
