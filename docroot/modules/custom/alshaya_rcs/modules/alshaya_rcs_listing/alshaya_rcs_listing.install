use Drupal\taxonomy\TermInterface;
use Drupal\alshaya_rcs_main_menu\Service\AlshayaRcsCategoryDataMigration;

/**
 * Implements hook_update_N().
 *
 * Add settings for Group by Subcategory.
 */
