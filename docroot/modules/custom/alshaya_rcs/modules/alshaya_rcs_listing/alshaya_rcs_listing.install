  \Drupal::service('alshaya_config.manager')->updateConfigs(['alshaya_rcs_listing.settings'], 'alshaya_rcs_listing');
}

/**
 * Implements hook_update_n().
 *
 * Update meta tag for rcs category canonical url.
 */
function alshaya_rcs_listing_update_9401() {
  \Drupal::configFactory()->getEditable('metatag.metatag_defaults.taxonomy_term__rcs_category')->save();
}

/**
 * Get list of blocks which needs to be enabled/disabled.
 *
 * @return array
 *   An array of block ids.
 */
