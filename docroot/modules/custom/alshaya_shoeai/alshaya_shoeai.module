    $shoeAi = \Drupal::service('alshaya_shoeai.helper');
    $shoeAiSettings = $shoeAi->getShoeAiSettings();
    if (!empty($shoeAiSettings)) {
      $build['#attached']['library'][] = 'alshaya_shoeai/shoeai_js';
