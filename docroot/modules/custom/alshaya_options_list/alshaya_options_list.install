<?php

/**
 * @file
 * Contains install, update, uninstall hooks for alshaya_master module.
 */

/**
 * Implements hook_install().
 *
 * Updating block config to move to site's current theme.
 */
function alshaya_options_list_install() {
  $manager = \Drupal::service('alshaya_config.manager');
  $manager->updateConfigs(
    ['block.block.alshayaoptionslistpagemenu'],
    'alshaya_options_list',
    'optional'
  );
}
