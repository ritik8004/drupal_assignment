<span class="simple-price--wrapper price-wrapper price">
  {% if currency_code_position == 'before' and show_currency %}
    <span class="price-currency suffix">{{ currency_format }}</span>
  {% endif %}

  <span class="price-amount">{{ price }}</span>

  {% if currency_code_position != 'before' and show_currency %}
    <span class="price-currency suffix">{{ currency_format }}</span>
  {% endif %}
</span>
