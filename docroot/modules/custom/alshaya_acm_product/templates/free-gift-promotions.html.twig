<div class="free-gift-image">
  {{ sku_image }}
</div>
<div class="free-gift-promo-wrapper">
  {% trans %}
    <div class="label">Free Gift</div>
    <div class="free-gift-title">
      <span class="title">{{ free_sku_title }}</span> with this product
    </div>
  {% endtrans %}
  {% if promo_code is not empty %}
    <div class="free-gift-coupon-code">
      {% trans %}
      Use Code <span class="coupon-code">{{ promo_code }}</span> with this product
      {% endtrans %}
    </div>
  {% endif %}
</div>
