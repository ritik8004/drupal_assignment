 */
function _alshaya_acm_product_clean_form_for_oos(array $form): array {
  foreach ($form as $id => $form_item) {
    // Preserve internal keys.
    if (strpos($id, '#') === 0) {
      continue;
    }

    // Preserve important info.
    if (in_array($id, ['form_id', 'form_build_id'])) {
