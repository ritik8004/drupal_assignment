/**
 * Implements hook_form_FORM_ID_alter().
 */
function alshaya_acm_customer_form_multistep_default_alter(&$form, FormStateInterface $form_state, $form_id) {
  // When we reach the final step, clear cache of orders list for the user.
  if (empty($form['actions']) || empty($form['actions']['next']) || empty((string) $form['actions']['next']['#value'])) {
    \Drupal::cache()->delete('orders_list_' . \Drupal::currentUser()->id());
  }
}

/**
 * Implements hook_block_access().
 */
function alshaya_acm_customer_block_access(Block $block, $operation, AccountInterface $account) {
  // Not allow 'recent orders' block other than user/{uid} page.
  if ($operation == 'view' && $block->id() == 'userrecentorders') {
    $current_route = \Drupal::routeMatch()->getRouteName();
    return AccessResult::forbiddenIf($current_route != 'entity.user.canonical');
  }
}
