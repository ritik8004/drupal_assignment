{#
/**
 * @file
 *
 * Default user order detail template.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - order: Array containing all order details.
 *
 * @ingroup themeable
 */
#}
<div{{ attributes }}>

  <div class="barcode--wrapper">
    <div class="inner--wrap">
      <div>
        {% trans %}
        <p>Thank you for shopping online with us, <strong class="dark--text">{{ account.first_name }} {{ account.last_name }}</strong></p>
        {% endtrans %}
      </div>

      <div>
        {% trans %}
        <p>You’ll receive an email addressed to <strong class="dark--text">{{ account.mail }}</strong> conﬁrming your order</p>
        {% endtrans %}
      </div>

      {% if account.privilege_card_number %}
        <div>
          {% trans %}
          <p>Your Privileges Card Number is: <strong class="dark--text">{{ account.privilege_card_number }}</strong></p>
          {% endtrans %}
        </div>
      {% endif %}
    </div>

    <div class="print--barcode">
      {{ barcode }}
    </div>
  </div>

  <div class="order-summary">
    <div class="order-id-details">
      {% trans %}
        Your order number is {{ order.orderId }}
      {% endtrans %}
    </div>

    <div class="order-print-button">
      <a href="{{ print_link }}" target="_blank">{{ "print confirmation"|t }}</a>
    </div>

  </div>

  <table class="user__order--detail">
    <tbody>
      {% if delivery_detail_notice %}
      <tr class="delivery-details-row">
        <td colspan="3" class="above-mobile">
          <span class="icon-ic_infomation"></span>{{ delivery_detail_notice }}
        </td>
        <td colspan="2" class="mobile-only">
          <span class="icon-ic_infomation"></span>{{ delivery_detail_notice }}
        </td>
        <td class="above-mobile blend">&nbsp;</td>
        <td class="desktop-only empty--cell">&nbsp;</td>
      </tr>
      {% endif %}

      <tr class="order-details-row">
        <td>
          <div class="label">{{ "Delivery to"|t }}</div>
          <div class="dark">{{ order_details.delivery_to }}</div>
          <div class="contact">
            <div class="label">{{ "Contact no."|t }}</div>
            <div class="dark">{{ order_details.contact_no }}</div>
          </div>

          <div class="mobile-only payment--details">
            <div class="label">{{ "Payment method"|t }}</div>
            <div class="dark">{{ order_details.payment_method }}</div>
          </div>
        </td>
        <td>
          <div class="label">{{ "Delivery address"|t }}</div>
          <div class="dark">{{ order_details.delivery_address }}</div>

          <div class="mobile-only delivery--method">
            <div class="label">{{ "Delivery method"|t }}</div>
            <div class="dark">{{ order_details.delivery_method }}</div>
          </div>
        </td>
        <td class="above-mobile tablet-blend">
          <div class="label">{{ "Delivery method"|t }}</div>
          <div class="dark">{{ order_details.delivery_method }}</div>

          <div class="tablet-only">
            <div class="label">{{ "Payment method"|t }}</div>
            <div class="dark">{{ order_details.payment_method }}</div>
          </div>
        </td>
        <td class="desktop-only blend">
          <div class="label">{{ "Payment method"|t }}</div>
          <div class="dark">{{ order_details.payment_method }}</div>
        </td>
        <td class="above-mobile empty--cell">&nbsp;</td>
      </tr>

      <tr class="product--count">
        <td colspan="5">
          {% trans %}
          Product details ({{ products_count }})
          {% endtrans %}
        </td>
      </tr>

      {% for product in products %}
        <tr class="order-item-row">
          <td>
            {% if product.image %}
              {{ product.image }}
            {% endif %}
          </td>
          <td>
            <div class="dark">{{ product.name }}</div>

            {% for attribute in product.attributes %}
              <div class="light">
                {% trans %}
                  {{ attribute.label }}: {{ attribute.value }}
                {% endtrans %}
              </div>
            {% endfor %}

            <div class="light">
              {% trans %}
                Item code: {{ product.sku }}
              {% endtrans %}
            </div>

            <div class="light">
              {% trans %}
                Quantity: {{ product.ordered }}
              {% endtrans %}
            </div>

            <div class="tablet-only">
              <div class="light">{{ "Unit price"|t }}</div>
              {% if currency_code_position == 'before' %}
                <span class="currency-code dark prefix">{{ currency_code }}</span>{{ product.total }}
              {% else %}
                {{ product.total }}<span class="currency-code dark suffix">{{ currency_code }}</span>
              {% endif %}
            </div>
            <div class="mobile-only">
              <div class="light">{{ "Total"|t }}</div>
              {% if currency_code_position == 'before' %}
                <span class="currency-code dark prefix">{{ currency_code }}</span>{{ product.total }}
              {% else %}
                {{ product.total }}<span class="currency-code dark suffix">{{ currency_code }}</span>
              {% endif %}
            </div>
          </td>
          <td class="desktop-only">
            <div class="light">{{ "Unit price"|t }}</div>
            {% if currency_code_position == 'before' %}
              <span class="currency-code dark prefix">{{ currency_code }}</span>{{ product.total }}
            {% else %}
              {{ product.total }}<span class="currency-code dark suffix">{{ currency_code }}</span>
            {% endif %}
          </td>
          <td class="above-mobile blend">
            <div class="light">{{ "Total"|t }}</div>
            {% if currency_code_position == 'before' %}
              <span class="currency-code dark prefix">{{ currency_code }}</span>{{ product.total }}
            {% else %}
              {{ product.total }}<span class="currency-code dark suffix">{{ currency_code }}</span>
            {% endif %}
          </td>

          <td class="above-mobile empty--cell">&nbsp;</td>
        </tr>
      {% endfor %}

      <tr class="sub-total-row">
        <td class="desktop-only">&nbsp;</td>
        <td class="above-mobile">&nbsp;</td>
        <td>{{ "Sub total"|t }}</td>
        <td class="blend">
          {% if currency_code_position == 'before' %}
            <span class="currency-code prefix">{{ currency_code }}</span>{{ order_details.sub_total }}
          {% else %}
            {{ order_details.sub_total }}<span class="currency-code suffix">{{ currency_code }}</span>
          {% endif %}
        </td>
        <td class="above-mobile empty--cell">&nbsp;</td>
      </tr>

      <tr class="delivery-charge-row">
        <td class="desktop-only">&nbsp;</td>
        <td class="above-mobile">&nbsp;</td>
        <td>{{ "Delivery charge"|t }}</td>
        <td class="blend">
          {% if currency_code_position == 'before' %}
            <span class="currency-code prefix">{{ currency_code }}</span>{{ order_details.delivery_charge }}
          {% else %}
            {{ order_details.delivery_charge }}<span class="currency-code suffix">{{ currency_code }}</span>
          {% endif %}
        </td>
        <td class="above-mobile empty--cell">&nbsp;</td>
      </tr>

      <tr class="total-row">
        <td class="desktop-only">&nbsp;</td>
        <td class="above-mobile">&nbsp;</td>
        <td>
          <div class="dark">{{ "ORDER TOTAL"|t }}</div>
        </td>
        <td class="warm--white">
          <div class="dark">
            {% if currency_code_position == 'before' %}
              <span class="currency-code prefix">{{ currency_code }}</span>{{ order_details.order_total }}
            {% else %}
              {{ order_details.order_total }}<span class="currency-code suffix">{{ currency_code }}</span>
            {% endif %}
          </div>
        </td>
        <td class="above-mobile empty--cell">&nbsp;</td>
      </tr>
    </tbody>
  </table>

</div>
