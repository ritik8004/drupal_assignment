{% if data.highlight_paragraph is not empty %}
  <div class="highlights">
    {#For other paragraphs.#}
    {#Render highlight image and other data.#}
    {#Even if title is empty, we need to render the empty div to set the min height.#}
    <div class="highlighted {{ data.highlight_paragraph.paragraph_type }}" gtm-type="gtm-highlights">
      <div class="title {{ title_class }}">
        {#If its highlight, then only we render the title.#}
      </div>
      <a href="{{ data.highlight_paragraph.image_link }}">
        <div class="field field--name-field-highlight-image field--type-image field--label-hidden field__item">
          <img class="b-lazy b-loaded" src="{{ file_url(data.highlight_paragraph.imageUrl) }}">
        </div>
      </a>           
    </div>
  </div>
{% endif %}
