<?php

/**
 * @file
 * Module file for alshaya_social.
 */

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_theme().
 */
function alshaya_social_theme() {
  return [
    'alshaya_social' => [
      'variables' => [
        'social_networks' => NULL,
        'form' => NULL,
      ],
    ],
  ];
}

/**
 * Implements hook_form_alter().
 */
function alshaya_social_form_alter(array &$form, FormStateInterface $form_state, $form_id) {
  if ($form_id == 'alshaya_user_settings') {
    $form['social'] = [
      '#type' => 'details',
      '#title' => t('Social authetication settings'),
      '#open' => TRUE,
      '#tree' => FALSE,
    ];

    $form['social']['social_login'] = [
      '#type' => 'checkbox',
      '#title' => t('Enable social login.'),
      '#default_value' => \Drupal::configFactory()->get('alshaya_social.settings')->get('social_login'),
    ];

    array_unshift($form['#submit'], 'alshaya_social_user_settings_submit');
  }
  elseif (
    in_array($form_id, ['user_register_form', 'user_login_form'])
    && \Drupal::configFactory()->get('alshaya_social.settings')->get('social_login')
    && !empty($social_networks = \Drupal::configFactory()->get('social_auth.settings')->get('auth'))
  ) {
    $form['#attributes']['class'][] = 'social-signup-form';
    $form['social_media_auth_links'] = [
      '#theme' => 'alshaya_social',
      '#social_networks' => $social_networks,
      '#form' => $form_id,
      '#weight' => 1000,
    ];
  }
}

/**
 * Submit callback for alshaya_user_settings form.
 */
function alshaya_social_user_settings_submit(array &$form, FormStateInterface $form_state) {
  \Drupal::configFactory()
    ->getEditable('alshaya_social.settings')
    ->set('social_login', (bool) $form_state->getValue('social_login'))
    ->save();
}

/**
 * Implements hook_preprocess_HOOK().
 */
function alshaya_social_preprocess_alshaya_social(&$variables) {
  $variables['base_path'] = base_path();
}
