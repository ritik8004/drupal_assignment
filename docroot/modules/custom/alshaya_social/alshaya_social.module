<?php

/**
 * @file
 * Module file for alshaya_social.
 */

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_theme().
 */
function alshaya_social_theme() {
  return [
    'alshaya_social' => [
      'variables' => [
        'social_networks' => NULL,
        'form' => NULL,
      ],
    ],
  ];
}

/**
 * Implements hook_form_alter().
 */
function alshaya_social_form_alter(array &$form, FormStateInterface $form_state, $form_id) {
  if (in_array($form_id, ['user_register_form', 'user_login_form'])) {
    $social_networks = \Drupal::configFactory()->get('social_auth.settings')->get('auth');
    // If there is any social network available.
    if (!empty($social_networks)) {
      $form['#attributes']['class'][] = 'social-signup-form';
      $form['social_media_auth_links'] = [
        '#theme' => 'alshaya_social',
        '#social_networks' => $social_networks,
        '#form' => $form_id,
        '#weight' => 1000,
      ];
    }
  }
}

/**
 * Implements hook_preprocess_HOOK().
 */
function alshaya_social_preprocess_alshaya_social(&$variables) {
  $variables['base_path'] = base_path();
}
