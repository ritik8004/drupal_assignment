<?php

/**
 * @file
 * Module file for alshaya_social_google.
 */

/**
 * Implements hook_preprocess_HOOK().
 */
function alshaya_social_google_preprocess_alshaya_social(&$variables) {
  if (!isset($variables['social_networks']['social_auth_google'])) {
    return;
  }

  if (in_array($variables['form'], ['user_login_form', 'checkout_social_auth'])) {
    $variables['social_networks']['social_auth_google']['text_link'] = t('Sign in with google');
  }
  elseif ($variables['form'] == 'user_register_form') {
    $variables['social_networks']['social_auth_google']['text_link'] = t('Sign up with google');
  }
}
