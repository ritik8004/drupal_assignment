<section class="order-status">
  <div class="container clearfix">
    <h2 class="steps_instruction">{{ 'Online Booking Completed Successfully'|t }}</h2>

    <div class="payment_option">
      <p class="ticket_details">{{ 'We’ve sent you an email and SMS with all the details of your Online Ticket Booking. Please print and present your email at KidZania’ s ticketing counters on the day of your visit. Z-U Soon!'|t }}</p>
    </div>
    <div class="payment_option">
      <p class="reference-number">
        {{ 'Reference Number'|t }}:
        <strong>{{ booking_info.sales_number }}</strong>
      </p>
    </div>
    <div class="payment_option">
      <p>
        {{ 'For safety and liability purposes, all children up to the age of 14 years need to be registered by and adult (18+ Years) at the front desk before they can enter the park.'|t }}
      </p>
    </div>
    <div class="k-net_container">
      <h3 class="knet-pay">{{ 'K-Net Payment Details'|t }}</h3>
      <div class="payment_option">
        {% if booking_info.transaction_id %}
        <p class="reference-number">
          {{ 'Transaction Id'|t }}:
          <span>{{booking_info.transaction_id}}</span>
        </p>
        {% endif %}
        {% if booking_info.payment_id %}
        <p class="reference-number">
          {{ 'Payment Id'|t }}:
          <span>{{ booking_info.payment_id }}</span>
        </p>
        {% endif %}
        {% if booking_info.order_total %}
        <p class="reference-number">
          {{ 'Total Payment'|t }}:
          <span>KWD {{ booking_info.order_total }}</span>
        </p>
        {% endif %}
        {% if booking_info.booking_date %}
        <p class="reference-number">
          {{ 'Date of Payment'|t }}:
          <span>{{ booking_info.booking_date }}</span>
        </p>
        {% endif %}
        <p class="reference-number">
          {{ 'Status'|t }}:
          <span>{{ 'Success'|t }}</span>
        </p>
      </div>
    </div>
  </div>
</section>
