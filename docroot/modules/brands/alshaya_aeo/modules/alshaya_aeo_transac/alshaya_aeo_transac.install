/**
 * Implements hook_update_N().
 */
function alshaya_aeo_transac_update_8005() {
  // Set image_thumb_gallery => false to use single image gallery
  // on listing pages.
  /** @var \Drupal\alshaya_config\AlshayaConfigManager $manager */
