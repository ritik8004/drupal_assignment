<?php

/**
 * @file
 * Install, uninstall, update function for alshaya_aeo_transac.
 */

use Drupal\block\Entity\Block;
use Drupal\alshaya_config\AlshayaConfigManager;

/**
 * Update algolia react with default value for render_single_result_facets.
 *
 * And also for exclude_render_single_result_facets.
 */
function alshaya_aeo_transac_update_9403() {
  $config = \Drupal::configFactory()->getEditable('alshaya_algolia_react.settings');
  if ($config) {
    $config->set('render_single_result_facets', FALSE);
    $config->set('exclude_render_single_result_facets', 'final_price,attr_color');
    $config->save();
  }
}

/**
 * Implements hook_update_N().
 *
 * Provides default setting for `show_full_width` for theme.
 */
function alshaya_aeo_transac_update_9402() {
  $config = \Drupal::configFactory()->getEditable('alshaya_american_eagle.settings');
  $config->set('show_full_width', FALSE);
  $config->save();
}

/**
 * Implements hook_update_N().
 *
 * Add arabic configurations for bazaar voice write review form.
 */
function alshaya_aeo_transac_update_9401() {
  if (\Drupal::service('module_handler')->moduleExists('alshaya_bazaar_voice')) {
    \Drupal::moduleHandler()->loadInclude('alshaya_aeo_transac', 'inc', 'alshaya_aeo_transac.bazaar_voice_content');
    $config = alshaya_aeo_transac_bazaar_voice_content();
    \Drupal::languageManager()->getLanguageConfigOverride('ar', 'webform.webform.alshaya_bv_write_review')->set('elements', $config['ar'])->save();
  }
}

