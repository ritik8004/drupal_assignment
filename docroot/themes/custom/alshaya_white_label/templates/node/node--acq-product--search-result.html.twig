{% set classes = [
'node',
'node--type-' ~ node.bundle|clean_class,
view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
] %}

<article {{ attributes.addClass(classes) }} {{ gtm_attributes }}>

  <div class="content">
    {{ content }}
    {% if content.promotions %}
      <div class="promotions">
        {{ content.promotions }}
      </div>
    {% endif %}
  </div>
  <!-- /content -->
</article>
<!-- /article #node -->
