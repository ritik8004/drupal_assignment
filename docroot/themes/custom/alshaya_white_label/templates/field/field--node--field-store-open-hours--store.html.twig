{% if label_hidden %}
  {% if multiple %}
    <div class="hours--wrapper selector--hours">
      <div{{ attributes }}>
        <div class="hours--label">{{ 'Opening Hours'|t }}</div>
        <div class="open--hours">
          {% for item in items %}
            <div{{ item.attributes }}>
              <span class="open-hours-label">{{ item.key }}</span>
              <span class="open-hours-time">{{ item.value }}</span>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% else %}
    {% for item in items %}
      <div{{ attributes }}>{{ item.content }}</div>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes }}>
    <div{{ title_attributes }}>{{ label }}</div>
    {% if multiple %}
    <div class="hours--wrapper selector--hours">
      {% endif %}
      <div class="hours--label">{{ 'Opening Hours'|t }}</div>
      <div class="open--hours">
        {% for item in items %}
          <div{{ item.attributes }}>{{ item.content }}</div>
        {% endfor %}
        {% if multiple %}
      </div>
    </div>
    {% endif %}
  </div>
{% endif %}
<div class="view-on--map">
  <a href="http://maps.google.com/?q={{ lat_lng.lat }},{{ lat_lng.lng }}" target='_blank'>
    {% trans %}
    View on map
    {% endtrans %}
  </a>
</div>
<div class="get--directions">
  <div>
    <a href="https://www.google.com/maps/dir/Current+Location/{{ lat_lng.lat }},{{ lat_lng.lng }}" target='_blank'>
      {% trans %}
      Get directions
      {% endtrans %}
    </a>
  </div>
</div>
