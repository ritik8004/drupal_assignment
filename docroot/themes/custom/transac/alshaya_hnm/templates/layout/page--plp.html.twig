{{ attach_library('alshaya_white_label/convert_to_select2') }}
{% set attributes = attributes.addClass('c-plp', 'c-plp-only', 'l-two--sf') %}
<div>
  <!-- ______________________ Banner Top _______________________ -->
  {% if page.banner_top %}
    {{ page.banner_top }}
  {% endif %}
  <!-- /Banner Top -->

  <!-- ______________________ MENU SECONDARY _______________________ -->

  <div class="header--wrapper">
    {% if page.menu_secondary %}
      <div class="c-menu-secondary">
        <div class="l-container">
          <div class="c-menu-secondary__region">
            {{ page.menu_secondary }}
          </div>
        </div>
      </div>
    {% endif %}
  </div>
    <!-- /menu-secondary -->

    <!-- ______________________ HEADER _______________________ -->
  <div class="branding__menu">
    {% include directory ~ '/../alshaya_white_label/templates/partial/nojs.html.twig' %}

    {% if page.header %}
      <header class="c-header">
        <div class="l-container">
          <div class="c-header__region">
            {{ page.header }}
          </div>
        </div>
      </header>
    {% endif %}
    <!-- /header -->

    <!-- ______________________ MENU PRIMARY _______________________ -->

    {% if page.menu_primary %}
      <div class="c-menu-primary">
        <div class="l-container">
          <div id="c-menu-primary__region">
            {{ page.menu_primary }}
          </div>
        </div>
      </div>
    {% endif %}
    <!-- /menu-primary -->

    <!-- ______________________ Pre content _______________________ -->
    {% if page.pre_content %}
      <div class="c-pre-content">
        <div class="l-container">
          <div class="c-pre-content__region">
            {{ page.pre_content }}
          </div>
        </div>
      </div>
    {% endif %}
  </div>

    {% if show_videos %}
        {% set randomVideo = random(data_setup) %}
      <!-- Video -->
      <div class = "plp-video">
        <video
                id="plp-video-player"
                class="video-js"
                preload="auto"
                width="100%"
                autoplay
                loop
                muted
                data-setup=
                {% if randomVideo.src %}
                '{"techOrder":["{{ randomVideo.provider }}"], "sources": [{ "type": "video/{{ randomVideo.provider }}", "src": "{{ randomVideo.src }}"}] }'
                {% endif %}
        >
            {% if randomVideo.video_source %}
              <source src = "{{ randomVideo.video_source.value }}" type = "{{ randomVideo.video_source.type }}" />
            {% endif %}
        </video>
        <div class="plp-mute-button"></div>
      </div>
    {% endif %}

  <!-- ______________________ BREADCRUMB _______________________ -->

  {% if page.breadcrumb %}
    <div class="c-breadcrumb">
      <div class="l-container">
        <div class="c-breadcrumb__region">
          {{ page.breadcrumb }}
        </div>
      </div>
    </div>
  {% endif %}
  <!-- /breadcrumb -->

  <!-- ______________________ HERO CONTENT _______________________ -->

  {% if page.hero_content %}
    <div class="c-hero-content">
      <div class="l-container">
        <div class="c-hero-content__region">
          {{ page.hero_content }}
        </div>
      </div>
    </div>
  {% endif %}
  <!-- /hero content -->

  <!-- ______________________ MAIN _______________________ -->

  <div class="clearfix page-wrapper">
    <div{{ attributes.addClass('l-container') }}>

      {% if page.sidebar_first %}
        <aside class="c-sidebar-first">
          <div class="c-sidebar-first__region">
            <div class="c-facet__blocks__wrapper">
              <h3 class="c-facet__label">{{ "Filter" | t }}</h3>
              <div class="c-facet__blocks">
                {{ page.sidebar_first }}
              </div>
            </div>
          </div>
        </aside>
      {% endif %}
      <!-- /sidebar-first -->

      <main>

        {% if title or messages or tabs or action_links %}
          <div class="c-content__header">

            {{ title_prefix }}

            {% if title %}
              <h1 class="c-content__title">
                {{ title }}
              </h1>
            {% endif %}

            {{ title_suffix }}
            {{ messages }}
            {{ page.help }}

            {% if tabs %}
              <div class="c-content__tabs">{{ tabs }}</div>
            {% endif %}

            {% if action_links %}
              <ul class="c-content__action-links">{{ action_links }}</ul>
            {% endif %}

          </div>
          <!-- /#content-header -->
        {% endif %}

        {% if page.highlighted %}
          <div class="c-content__highlighted">
            {{ page.highlighted }}
          </div>
        {% endif %}

        <div class="c-content">
          <div class="c-content__region show-content-loading-throbber">
            <div class="moschino-layout-submenu-icon">
              <span class="plp-icon"><img src="{{ file_url(plp_icon) }}"></span>
              <span class="sub-menu-btn"></span>
            </div>
            {{ page.content }}

            {% if category_term_description %}
              <div class="term-description-mobile-only c-page-title__description">
                <div class="term-name c-page-title">{{ category_term_name }}</div>
                <div class="term-description">{{ category_term_description | raw }}</div>
              </div>
            {% endif %}
          </div>
        </div>

        {{ feed_icons }}

      </main>
      <!-- /content-inner /content -->

      {% if page.sidebar_second %}
        <aside class="c-sidebar-second">
          <div class="c-sidebar-second__region">
            {{ page.sidebar_second }}
          </div>
        </aside>
      {% endif %}
      <!-- /sidebar-first -->

    </div>
  </div>
  <!-- /main -->

  <!-- ______________________ Post content _______________________ -->

  {% if page.post_content %}
    <div class="c-post-content">
      <div class="l-container">
        <div class="c-post-content__region">
          {{ page.post_content }}
        </div>
      </div>
    </div>
  {% endif %}

  <!-- ______________________ FOOTER PRIMARY _______________________ -->
  <footer class="c-footer">
    {% if page.footer_primary %}
        {% include directory ~ '/templates/partial/footer-primary.html.twig' %}
      <!-- /footer-primary -->
    {% endif %}

    <!-- ______________________ FOOTER SECONDARY _______________________ -->

    {% if page.footer_secondary %}
      <div class="c-footer-secondary">
        <div class="l-container">
          <div class="c-footer-secondary__region">
            {{ page.footer_secondary }}
          </div>
        </div>
      </div>
      <!-- /footer-secondary -->
    {% endif %}
  </footer>


</div>
<!-- /page -->
