<section id="step-4" class="ticketing__steps five">
  <div class="container clearfix">
    <div class="steps_count">
      <div class="steps odd">
        <div class="step_number">5</div>
        <span class="step_legend">{{ 'Visitor details'|t }}</span>
      </div>
    </div>
    <div class="steps__information clearfix">
      <h2 class="steps_instruction">{{ 'Visitor Details'|t }}</h2>
      <p class="know_who">{{ 'Let us Know who is coming to visit'|t }}</p>
      <div class="booking_info">
        <div class="booking_row clearfix">
          <div class="booking_col">
            <span class="up_row">{{ 'Visit Date'|t }}</span>
            <div class="below_row">
              <span>
                <span class="icon icon-calendar"></span>
                <span class="dateDisplay"></span>
              </span>
            </div>
          </div>
          <div class="booking_col">
            <span class="up_row">{{ 'Facility'|t }}</span>
            <div class="below_row">
              <span>
                <span class="icon icon-flag-blank"></span>
                <span>{{ 'Kuwait'|t }}</span>
              </span>
            </div>
          </div>
          <div class="booking_col">
            <span class="up_row">{{ 'Total'|t }}</span>
            <div class="below_row">
              <span>KWD<span class="totalDisplay"></span></span>
            </div>
          </div>
        </div>
      </div>
      <div class="table_structure clearfix">
        <div class="tbl_header">{{ 'Type'|t }}</div>
        <div class="tbl_header">{{ 'Visitor Name'|t }}</div>
        <div class="tbl_header">{{ 'Age'|t }}</div>
        <div class="tbl_header">{{ 'Gender'|t }}</div>
      </div>
      <form name="" id="" class="payment_form">
        <div id="paymentForm"></div>
        <div class="formErrMessage">*{{ 'Please enter all details for the visitor'|t }}</div>
        <div class="form_submit_block">
          <input type="button" value="{{ 'Continue to payment'|t }}" id="" class="continueBtn">
        </div>
      </form>
    </div>
  </div>
</section>
