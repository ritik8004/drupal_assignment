{
    "name": "acquia/blt-project",
    "description": "Project template for Drupal 8 sites built with BLT.",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "acquia/blt": "^8.9.7",
        "acquia/lightning": "^2.2.0",
        "drupal/address": "^1.0-rc4",
        "drupal/acsf": "^1.33.0",
        "drupal/key_value_field": "^1.0-beta1",
        "drupal/restui": "^1.13",
        "drush/drush": "^8.1.15",
        "drupal/menu_admin_per_menu": "^1.0@RC",
        "drupal/menu_link_attributes": "^1.0@beta",
        "drupal/paragraphs": "^1.1",
        "drupal/default_content": "^1.0@alpha",
        "drupal/taxonomy_access_fix": "^2.1",
        "drupal/password_policy": "^3.0",
        "drupal/taxonomy_term_depth": "1.x-dev",
        "drupal/email_registration": "^1.0",
        "drupal/captcha": "^1.0@beta",
        "drupal/recaptcha": "2.x-dev",
        "drupal/views_field_view": "1.0-beta2",
        "drupal/user_registrationpassword": "^1.0",
        "drupal/clientside_validation": "1.x-dev",
        "drupal/facets": "1.0-alpha11",
        "drupal/profile": "^1.0@alpha",
        "drupal/field_group": "^3.0@beta",
        "drupal/webform": "^5.0@beta",
        "drupal/back_to_top": "^1.0@beta",
        "drupal/change_pwd_page": "^1.0@beta",
        "drupal/mobile_number": "^1.0@alpha",
        "drupal/sharethis": "^2.0@beta",
        "drupal/mailsystem": "^4.1",
        "drupal/mimemail": "1.x-dev",
        "drupal/search_api_solr": "^1.0-rc3",
        "drupal/search_api_autocomplete": "1.0-alpha2",
        "drupal/acquia_connector": "1.9.0",
        "drupal/geolocation": "^1.10",
        "drupal/block_field": "^1.0@alpha",
        "drupal/google_tag": "1.x-dev",
        "drupal/simple_sitemap": "2.x-dev",
        "drupal/robotstxt": "^1.1",
        "drupal/redirect": "^1.0@alpha",
        "drupal/form_options_attributes": "^1.0",
        "drupal/search_api_spellcheck": "dev-8.x-1.x",
        "drupal/better_exposed_filters": "3.x-dev",
        "drupal/r4032login": "1.x-dev",
        "drupal/datalayer": "^1.0@beta",
        "drupal/search_api_solr_multilingual": "^1.0@beta",
        "drupal/views_block_filter_block": "1.x-dev",
        "mobiledetect/mobiledetectlib": "^2.8",
        "acquia/http-hmac-php": "~3.2",
        "drupal/simple_oauth": "^3.0",
        "drupal/pcb": "^1.0@RC",
        "drupal/components": "^1.0",
        "drupal/twig_tweak": "^1.8",
        "drupal/kashmir": "^1.1",
        "drupal/migrate_plus": "^2.0",
        "drupal/migrate_source_csv": "^2.0",
        "drupal/migrate_tools": "^2.0",
        "jqueryvalidate/jqueryvalidate": "~1.0",
        "drupal/viewsreference": "^1.0",
        "drupal/autologout": "^1.0",
        "drupal/block_content_machine_name": "^1.5",
        "drupal/menu_link_modal": "^1.3",
        "drupal/imagemagick": "~2.0",
        "acquia/acsf-tools": "^8.1",
        "drupal/metatag": "1.2",
        "drupal/acquia_purge": "^1.0@beta",
        "drupal/video_embed_field": "2.0.0-alpha2",
        "drupal/role_delegation": "^1.0@alpha",
        "geerlingguy/drupal-vm": "~4.3",
        "drupal/amp": "^1.0",
        "drupal/amptheme": "^1.0",
        "drupal/media_entity_actions": "1.x-dev"
    },
    "require-dev": {
        "drupal/console": "^1.0.0-rc13",
        "drupal/devel": "^1.0.0-alpha1",
        "jakoch/phantomjs-installer": "^2.1.1-p07",
        "drupal/stage_file_proxy": "^1.0@alpha"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "jqueryvalidate": {
            "type": "package",
            "package": {
                "name": "jqueryvalidate/jqueryvalidate",
                "version": "1.17.0",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/jquery-validation/jquery-validation/releases/download/1.17.0/jquery-validation-1.17.0.zip",
                    "type": "zip"
                }
            }
        },
        "nuvoleweb": {
            "type": "git",
            "url": "https://github.com/nuvoleweb/search_api_spellcheck.git"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\PHPUnit\\": "tests/phpunit/src/"
        }
    },
    "extra": {
        "blt": {
            "update": true
        },
        "enable-patching": true,
        "patches": {
            "drupal/taxonomy_term_depth": {
                "Fix install and uninstall issue #2863541": "https://www.drupal.org/files/issues/fix-install-uninstall-2863541-7_0.patch"
            },
            "drupal/search_api_solr": {
                "PHP Fatal error: Call to a member function getBoost()": "https://www.drupal.org/files/issues/search_api_solr--search-field-not-in-index--2812861--14.patch"
            },
            "drupal/search_api_solr_multilingual": {
                "Add Arabic support": "https://www.drupal.org/files/issues/search_api_solr_multilingual--add-arabic-support--2883911--2.patch",
                "Add spellcheck per language support": "https://www.drupal.org/files/issues/search_api_solr_multilingual--add-spellcheck-per-language-support--2735625--5.patch",
                "Disable field type check on Acquia Search": "patches/search_api_solr_multilingual--disable-field-type-check.patch"
            },
            "drupal/search_api_spellcheck": {
                "Warning when no spelling suggestions": "patches/search_api_spellcheck--no-suggestions-warning.patch"
            },
            "drupal/metatag": {
                "support for meta tags that allow multiple values": "https://www.drupal.org/files/issues/metatag-n2628934-23.patch"
            },
            "drupal/acquia_connector": {
                "List of possible cores should include .default as well": "https://www.drupal.org/files/issues/2871721-5.patch",
                "Set index writable again after conditions are met": "https://www.drupal.org/files/issues/2922201-9.patch"
            },
            "drupal/search_api": {
                "search_api_db addExpression() doesn't work with facets": "https://www.drupal.org/files/issues/2912616-2.patch"
            },
            "drupal/facets": {
              "Fatal error on first facet being empty": "patches/facets/custom-2877004-2877322.patch",
              "Ajaxifying facet filters": "https://www.drupal.org/files/issues/facets-views-ajax-2826449-8.x-alpha11-57.patch",
              "Soft limits ajax once issue": "patches/facets/soft-limit-patch-to-work-with-custom-js.patch",
              "Fix ajax facets breaking sort": "patches/facets/fix-ajax-facets-breaking-sort.patch"
            },
            "drupal/better_exposed_filter": {
                "Undefined index: input_required notice": "https://www.drupal.org/files/issues/undefined_index_input_required-2857685-11.patch"
            },
            "drupal/core": {
                "No active language in language switcher for URL with query string": "https://www.drupal.org/files/issues/active-language-links-2775651-22.patch",
                "Disable error messages on top - IFE": "https://www.drupal.org/files/issues/2880011-13.patch",
                "Add views render caching on views ajax requests.": "https://www.drupal.org/files/issues/add_views_render-2500313-39.patch",
                "Allow AJAX to use GET requests": "https://www.drupal.org/files/issues/ajax-956186-65_2x_1.patch",
                "Support for multiple exposed forms with same id on a page": "https://www.drupal.org/files/issues/drupal-views-multiple-exposed-2876197-13.patch",
                "2766509 - Graceful cache fallbacks": "https://www.drupal.org/files/issues/drupal-graceful-cache-error-2766509-38.patch",
                "Adding a new batch set while the batch is running breaks batch order": "https://www.drupal.org/files/issues/2664016-41.patch"
            },
            "drupal/back_to_top": {
                "Triggers only after page scroll, Initial page load shows the link": "https://www.drupal.org/files/issues/triggers_only_after-2880660-2.patch",
                "Add config translation issue #2865388": "https://www.drupal.org/files/issues/translation-support-2865388-12.patch",
                "Add alter hook for admin check": "https://www.drupal.org/files/issues/2892237-2.patch"
            },
            "drupal/r4032login": {
                "Alter/Override options parameter": "https://www.drupal.org/files/issues/2883264-4.patch"
            },
            "drupal/mobile_number": {
                "Fix notices": "https://www.drupal.org/files/issues/2886786.patch"
            },
            "drupal/clientside_validation": {
                "Allow jQuery Validation library to be installed outside of module folder": "https://www.drupal.org/files/issues/2895666-15-allow-library-to-be-installed-outside-module.patch",
                "Add ife support": "patches/clientside_validation/2906132-4-custom.patch"
            },
            "drupal/redirect": {
                "Wildcard support for query parameter redirects": "https://www.drupal.org/files/issues/redirect-query-wildcard-2885889-8.x-alpha5-2.patch",
                "Fix - Integrity constraint violation": "https://www.drupal.org/files/issues/duplicate-entry-fix-2887866-9.patch"
            },
            "drupal/simple_sitemap": {
                "MMCPA-2433": "patches/simple_sitemap/simple_sitemap_MMCPA-2433.patch"
            },
            "drupal/password_policy" : {
                "Code logic will never reset password expiry - update" : "https://www.drupal.org/files/issues/2867089-9.patch",
                "Cron expire date format and timezone is incorrect, leads to infinite password resets." : "https://www.drupal.org/files/issues/cron_expire_date_format-2860671-7.patch",
                "Integration with change_pwd_page" : "https://www.drupal.org/files/issues/2933746-3.patch"
            },
            "drupal/change_pwd_page" : {
                "Integration with password_policy" : "https://www.drupal.org/files/issues/2933747-4.patch"
            },
            "drupal/sharethis": {
                "An alter required for altering attributes variable": "https://www.drupal.org/files/issues/an-alter-required-2900290_4.patch"
            },
            "drupal/recaptcha": {
                "modal support": "https://www.drupal.org/files/issues/2493183-recaptcha-use-behaviors-76.patch"
            },
            "drupal/paragraphs": {
                "Support translatable paragraph entity reference revision field": "https://www.drupal.org/files/issues/meta_support-2461695-224.patch"
            },
            "drupal/wbm2cm": {
                "Revert all moderation_state fields": "https://www.drupal.org/files/issues/2933745-7.patch"
            },
            "drupal/media_entity": {
                "Add media_entity_copy_icons": "patches/media_entity/media_entity-media_entity_copy_icons.patch"
            },
            "drupal/amptheme": {
                "Add svg file with defined viewbox height and width": "https://www.drupal.org/files/issues/amptheme-do_not_use_the_network_for_loading_logo_information-2753089-7.patch"
            },
            "acquia/blt": {
                "ACR2-2704 css linting sniff": "./patches/blt/css_lint_sniff_ACR2-2704.patch",
                "Allow validation of frontend files": "https://patch-diff.githubusercontent.com/raw/acquia/blt/pull/2571.patch",
                "Travis marked as success despite error after core update": "./patches/blt/travis_failed_but_success_ACR2-2680.patch"
            }
        },
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset",
                "type:bower-asset",
                "type:npm-asset"
            ]
        },
        "merge-plugin": {
            "require": [
                "vendor/acquia/blt/composer.required.json",
                "vendor/acquia/blt/composer.suggested.json"
            ],
            "include": [
                "blt/composer.overrides.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true,
            "replace": true
        },
        "installer-types": [
            "bower-asset",
            "npm-asset",
            "bower-asset",
            "npm-asset"
        ]
    },
    "scripts": {
        "blt-alias": "blt install-alias -Dcreate_alias=true",
        "post-drupal-scaffold-cmd": [
            "cd docroot && patch -p1 <../patches/htaccess-ssl.patch",
            "cd docroot && patch -p1 <../patches/htaccess-acsf.patch",
            "cd docroot && patch -p1 <../patches/htaccess-remove-trailing-slash.patch",
            "cd docroot && patch -p1 <../patches/htaccess-ssl-exception.patch",
            "cd docroot && patch -p1 <../patches/htaccess-robots-dev.patch",
            "cd docroot && patch -p1 <../patches/htaccess-force-www.patch",
            "cd docroot && patch -p1 <../patches/htaccess-temporary-hotfix.patch",
            "cd docroot && patch -p1 <../patches/htaccess-detect-https-acsf.patch",
            "cd docroot && patch -p1 <../patches/htaccess-simplesaml.patch"
        ],
        "nuke": [
            "rm -rf vendor composer.lock",
            "@composer clearcache",
            "@composer install"
        ],
        "install-phantomjs": [
            "rm -rf vendor/bin/phantomjs",
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    },
    "config": {
        "platform": {
            "php": "5.6"
        }
    }
}
